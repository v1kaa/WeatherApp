doctype html
html
  head
    title Weather App
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="/styles.css")
  body
    .container.mt-5
      .card.p-4.shadow-lg
        h1.text-center.mb-4 Weather App
        form(action="/weather", method="get", class="input-group mb-3")
          input(type="text", name="city", placeholder="Enter city name", class="form-control")
          button(type="submit", class="btn btn-primary") Get Weather

        if error
          .alert.alert-danger.mt-3= error
        else if weather
          .card.mt-3.p-3
            h2.text-center #{weather.name}, #{weather.sys.country}
            h3.text-center #{weather.main.temp}°C
            p.text-center.text-muted #{weather.weather[0].main} - #{weather.weather[0].description}

      if history.length
        .mt-4
          h2.text-center Search History
          ul.list-group
            each entry in history
              li.list-group-item #{entry.city} - #{entry.temp}°C
